<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- clientes solo ven sus propias reservas -->
        <record id="booking_client_rule" model="ir.rule">
            <field name="name">Cliente: Solo sus propias reservas</field>
            <field name="model_id" ref="model_res_booking"/>
            <field name="domain_force">[('client_id.user_ids', 'in', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_booking_client'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- administradores ven todas las reservas -->
        <record id="booking_manager_rule" model="ir.rule">
            <field name="name">Administrador: Todas las reservas</field>
            <field name="model_id" ref="model_res_booking"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_booking_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- todos pueden ver servicios disponibles -->
        <record id="service_all_rule" model="ir.rule">
            <field name="name">Servicios: Lectura para todos</field>
            <field name="model_id" ref="model_res_service"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_booking_client'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- solo administradores pueden gestionar servicios -->
        <record id="service_manager_rule" model="ir.rule">
            <field name="name">Servicios: Gesti√≥n completa para administradores</field>
            <field name="model_id" ref="model_res_service"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_booking_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>